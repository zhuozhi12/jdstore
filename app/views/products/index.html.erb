
 <div class="product-box">
   <div class="container">
     <!--===== 广告图 =====-->
     <section class="intro-box">
       <div class="row">
         <div class="col-md-12">
           <%= image_tag("zz1.jpg") %><!-- 图片位置 -->
         </div>
       </div>
     </section>

     <!--===== 商品类型 & 品牌选单 =====-->
     <section class="menu-box">
       <!-- 主要类型 -->
       <div class="row">
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           免费区，易货区 <i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：分类 -->
           <ul class="dropdown-menu">
             <li><a href="#">童裙</a></li>
             <li><a href="#">童裤</a></li>
             <li><a href="#">童T</a></li>
           </ul>
         </div>
         <!-- 主要类型 -->
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           十元店 <i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：分类 -->
           <ul class="dropdown-menu">
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
           </ul>
         </div>
         <!-- 主要类型 -->
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           交易区 <i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：分类 -->
           <ul class="dropdown-menu">
             <li><a href="#"></a></li>
             <li><a href="#"></a></li>
             <li><a href="#"></a></li>
           </ul>
         </div>
         <!-- 品牌 -->
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           品牌<i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：品牌 -->
           <ul class="dropdown-menu">
             <li><a href="#">品牌</a></li>
             <li><a href="#">品牌</a></li>
             <li><a href="#">品牌</a></li>
           </ul>
         </div>
       </div>
     </section>

     <hr/>

     <!--===== 页面路径 & 排序 =====-->
     <section class="path-sort-box">
       <!--=== 产品页面路径 ===-->
       <div class="left-box">
         <a href="#">商品列表</a>
       </div>
       <!--=== 选单按钮 ===-->
       <div class="right-box">
         <div class="dropdown btn-group clearfix">
           <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
             預設排序 <span class="caret"></span>
           </button>
           <!-- 选单内容：排序方式 -->
           <ul class="dropdown-menu dropdown-menu-right" selection aria-labelledby="dropdownMenuDivider">
             <li><a href="#">依热销度</a></li>
             <li><a href="#">依上架时间</a></li>
             <li><a href="#">依价格排序：低至高</a></li>
             <li><a href="#">依价格排序：高至低</a></li>
           </ul>
         </div>
       </div>
     </section>

     <hr/>

     <!--===== 商品列表 =====-->

     <section class="product-items-box">
       <% @products.each do |product| %>
       <div class="col-xs-12 col-sm-4 col-md-3">

         <%= link_to product_path(product) do %>
         <% if product.image.present? %>
         <%= image_tag(product.image.thumb.url,class:"box") %>
         <% else %>
         <%= image_tag("", class: "box") %>
         <% end %>
         <div class="product-info">
         <p>刺绣礼裙</p>
         <%= product.title %> ￥ <%= product.price %>
         </div>
         <% end %>
         </div>
         <% end %>

         </section>
